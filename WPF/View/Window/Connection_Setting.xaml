<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="WPF.Connection_Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Component="clr-namespace:Component.View.Controller;assembly=Component"
    mc:Ignorable="d"
    Title="" Height="300" Width="400" ResizeMode="NoResize" BorderThickness="0" 
    WindowTitleBrush="{StaticResource OuterFrame}" 
    Background="{DynamicResource Panel_1}" WindowStartupLocation="CenterScreen" >

    <!--#region Window.Resources -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Background" Value="#FFABADB3"/>
        </Style>
    </Window.Resources>
    <!--#endregion-->

    <!--#region 視窗框 左邊內容 -->
    <Controls:MetroWindow.LeftWindowCommands>
        <Controls:WindowCommands>
            <Image Width="20" Height="20" Margin="10,5" Source="pack://siteoforigin:,,,/Resources/Connection.png" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.LeftWindowCommands>
    <!--#endregion-->
    
    <Grid>
        <TabControl Style="{StaticResource MahApps.Styles.Control.WindowCommands}" 
                    Background="{DynamicResource Panel_2}" 
                    BorderBrush="{StaticResource Panel_2}" Margin="2">
            
            <!--#region Database -->
            <TabItem Header="SQL Server" Style="{StaticResource conTabItem}" >
                <Grid x:Name="gri_DB" >
                    <Component:pan_DBConfig />
                </Grid>
            </TabItem>
            <!--#endregion-->

            <TabItem Header="MQTT" Style="{StaticResource conTabItem}" >
                <Grid>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</Controls:MetroWindow>
