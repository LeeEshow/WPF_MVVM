<UserControl x:Class="WPF.tb_Mission"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="90">

    <ToolBar x:Name="tb_Status" VerticalAlignment="Center" Background="{x:Null}">
        <Button Style="{StaticResource Menu_Button}" Height="25" Click="Button_MissionManager">
            <Button.Content>
                <DockPanel>
                    <TextBlock Text="Task：" Margin="3,0,0,0" Foreground="{StaticResource White}" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Tasks_Count}" Margin="0,0,3,0" Foreground="{StaticResource White}" VerticalAlignment="Center" />
                </DockPanel>
            </Button.Content>
        </Button>
        <Button Style="{StaticResource Menu_Button}" Height="25" Click="Button_StartStop">
            <DockPanel>
                <Image Source="{Binding Operate_Image}" Width="25"/>
                <TextBlock Text="{Binding Operate}" Width="30" VerticalAlignment="Center" Foreground="{StaticResource White}"/>
            </DockPanel>
        </Button>
    </ToolBar>
</UserControl>
